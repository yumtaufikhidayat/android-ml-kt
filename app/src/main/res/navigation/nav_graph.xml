<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/topicsFragment">

    <fragment
        android:id="@+id/topicsFragment"
        android:name="com.taufik.androidmachinelearning.bert_question_answer.ui.fragment.TopicsFragment"
        android:label="fragment_topics"
        tools:layout="@layout/fragment_topics" >
        <action
            android:id="@+id/action_topicsFragment_to_QAFragment"
            app:destination="@id/QAFragment" />
    </fragment>
    <fragment
        android:id="@+id/QAFragment"
        android:name="com.taufik.androidmachinelearning.bert_question_answer.ui.fragment.QAFragment"
        android:label="fragment_q_a"
        tools:layout="@layout/fragment_q_a">
        <argument
            android:name="topicID"
            app:argType="integer" />
        <argument
            android:name="topicTitle"
            app:argType="string" />
    </fragment>
</navigation>